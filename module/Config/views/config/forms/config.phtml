?>
<form class="relative form-horizontal" action="<?php echo $this->escapeHtml($this->form->getAttribute('action')); ?>" method="post" enctype="application/x-www-form-urlencoded">
    <?php $fieldsets = $this->form->getFieldsets(); ?>

    <div id="accordion">
        <?php foreach ($fieldsets as $fieldset): ?>
            <h3><?php echo $this->escapeHtml($this->translate($fieldset->getLabel())); ?></h3>
            <div>
                <?php foreach ($fieldset->getElements() as $element): ?>
                    <div class="form-group">
                        <label class="required control-label col-lg-2" for="<?php echo $element->getAttribute('id'); ?>"><?php echo $this->escapeHtml($this->translate($element->getAttribute('label'))); ?></label>

                        <div class="col-lg-10">
                            <?php echo $this->formElement($element); ?>
                            <?php echo $this->formElementErrors($element, array('class' => 'text-danger')); ?>
                        </div>
                    </div>
                <?php endforeach; ?>
            </div>
        <?php endforeach; ?>
    </div>


    <input id="input-save" type="submit" class="btn btn-warning" value="<?php echo $this->escapeHtml($this->translate('Save')); ?>" id="submit" name="submit">
</form>

<script type="text/javascript">
$(function(){
    Gc.saveCommand();
    Gc.checkDataChanged();
    $('#accordion').accordion({
        heightStyle: "content",
        collapsible: true
    });
});
</script>
