?>
<div class="page-header position-relative">
    <h1>
        <?php echo $this->escapeHtml($this->translate('Database configuration')); ?>
    </h1>
</div>

<?php if (!empty($this->messages)): ?>
    <div class="alert alert-danger">
        <ul>
            <?php foreach ($this->messages as $message): ?>
                <li><?php echo $this->escapeHtml($this->translate($message)); ?></li>
            <?php endforeach; ?>
        </ul>
    </div>
<?php endif; ?>

<?php $elements = $this->form->getElements(); ?>
<div class="form-horizontal">
    <?php foreach ($elements as $element): ?>
        <div class="form-group">
            <label class="control-label required col-lg-2" for="<?php echo $element->getAttribute('id'); ?>"><?php echo $this->escapeHtml($this->translate($element->getAttribute('label'))); ?></label>
            <div class="col-lg-10">
                <?php echo $this->formElement($element); ?>
                <?php echo $this->formElementErrors($element, array('class' => 'text-danger')); ?>
            </div>
        </div>
    <?php endforeach; ?>
</div>
