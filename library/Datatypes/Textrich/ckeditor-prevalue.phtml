?>
<?php $fieldsets = $this->textrich; ?>
<span id="ckeditor-select-all" style="cursor:pointer;text-decoration:underline"><?php echo $this->escapeHtml($this->translate('Select all elements')); ?></span>

<div id="elements" class="row">
    <?php foreach ($fieldsets as $fieldset): ?>
        <?php if (!empty($fieldset)): ?>
            <div class="col-lg-2">
            <h3><?php echo $this->escapeHtml($this->translate($fieldset->getName())); ?></h3>
            <?php foreach ($fieldset->getElements() as $element): ?>
                <div>
                    <?php $content = $element->getAttribute('content'); ?>
                    <?php if (!empty($content)): ?>
                        <?php echo $content; ?>
                    <?php else: ?>
                        <label class="required" for="<?php echo $this->escapeHtml($this->translate($element->getAttribute('id'))); ?>"><?php echo $this->escapeHtml($this->translate($element->getAttribute('label'))); ?></label>

                        <?php echo $this->formElement($element); ?>
                    <?php endif; ?>
                </div>
            <?php endforeach; ?>
            </div>
        <?php endif; ?>
    <?php endforeach; ?>
</div>
<script type="text/javascript">
    $('#ckeditor-select-all').on('click', function () {
        $('#elements').find('input[type="checkbox"]').prop('checked', true);
    });
</script>
