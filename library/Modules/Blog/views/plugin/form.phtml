<form id="comment_form" action="<?php echo $this->escapeHtml($this->layout()->currentDocument->getUrl()); ?>" method="post">
    <h3><?php echo $this->escapeHtml($this->translate('Add a comment')); ?></h3>
    <div class="hr dotted clearfix">&nbsp;</div>
    <ul>
        <li class="clearfix">
            <label for="username"><?php echo $this->escapeHtml($this->translate('Your Name')); ?></label>
            <input id="username" name="username" type="text" required="required" value="<?php echo $this->escapeHtml($this->form->getValue('username')); ?>">
        </li>
        <li class="clearfix">
            <label for="email"><?php echo $this->escapeHtml($this->translate('Your Email')); ?></label>
            <input id="email" name="email" type="text" required="required" value="<?php echo $this->escapeHtml($this->form->getValue('email')); ?>">
        </li>
        <li class="clearfix">
            <label for="show_email"><?php echo $this->escapeHtml($this->translate('Show email')); ?></label>
            <div id="show-email">
                <input type="checkbox" checked="checked" value="1" id="show_email" name="show_email">
                <label for="show_email"></label>
            </div>
        </li>
        <li class="clearfix">
            <label for="message"><?php echo $this->escapeHtml($this->translate('Comment')); ?></label>
            <textarea id="message" name="message" rows="3" cols="40" required="required"><?php echo $this->escapeHtml($this->form->getValue('message')); ?></textarea>
        </li>
        <li class="clearfix">
            <label for="captcha" style="width:auto">Please verify you are human</label>
            <?php echo $this->formRow($this->form->get('captcha')); ?>
        </li>
        <li class="clearfix">
            <input id="submit" type="submit" class="button medium black right" value="Add comment">
        </li>
    </ul>
</form>
